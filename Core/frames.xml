<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                        https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

  <FontString name="TMDM_MessageFont" virtual="true" font="Fonts\FRIZQT__.TTF" outline="NORMAL" justifyH="CENTER">
    <FontHeight val="60"/>
    <Shadow>
      <Offset x="1" y="-1" />
      <Color r="0" g="0" b="0"/>
    </Shadow>
  </FontString>

  <Frame name="TMDM_MessageFrame" parent="UIParent" clampedToScreen="true" hidden="true">
    <Size x="800" y="180" />
    <Anchors>
      <Anchor point="TOP" y="-100" />
    </Anchors>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="TMDM_Message1" text="" inherits="TMDM_MessageFont">
          <Anchors>
            <Anchor point="TOP" />
          </Anchors>
        </FontString>
        <FontString name="TMDM_Message2" text="" inherits="TMDM_MessageFont">
          <Anchors>
            <Anchor point="CENTER" />
          </Anchors>
        </FontString>
        <FontString name="TMDM_Message3" text="" inherits="TMDM_MessageFont">
          <Anchors>
            <Anchor point="BOTTOM" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
