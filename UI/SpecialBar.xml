<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                        https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

  <Script file="SpecialBar.lua"/>

  <Frame name="TMDM_SpecialBar" mixin="TMDM_SpecialBarMixin" inherits="TMDM_BaseDisplayFrame" parent="UIParent">
    <Size x="600" y="24" />
    <Layers>
        <Layer level="BACKGROUND">
          <Texture parentKey="BG">
            <Anchors>
              <Anchor point="TOPLEFT" x="0" y="0"/>
              <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
            </Anchors>
            <Color r="0" g="0" b="0"/>
          </Texture>
        </Layer>
        <Layer level="OVERLAY" textureSubLevel="-1">
          <Texture parentKey="Bar">
            <Size x="598"/>
            <Anchors>
              <Anchor point="TOPLEFT" x="1" y="-1"/>
              <Anchor point="BOTTOMLEFT" x="1" y="1"/>
            </Anchors>
            <Color r="0.2" g="0.7" b="0.9"/>
          </Texture>
        </Layer>
        <Layer level="OVERLAY">
          <Texture parentKey="Spark">
            <Size x="8"/>
            <Anchors>
              <Anchor point="TOPRIGHT" x="-1" y="-1"/>
              <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
            </Anchors>
            <Color r="1" g="0" b="0" a="0.75"/>
          </Texture>
        </Layer>
        <Layer level="OVERLAY" textureSubLevel="1">
          <FontString parentKey="Text" font="Fonts\FRIZQT__.TTF" text="TIMER" outline="NORMAL" justifyH="RIGHT">
            <FontHeight val="20"/>
            <Anchors>
              <Anchor point="RIGHT" x="-5" />
            </Anchors>
            <Shadow>
              <Offset x="1" y="-1" />
              <Color r="0" g="0" b="0"/>
            </Shadow>
          </FontString>
        </Layer>
    </Layers>
  </Frame>
</Ui>
